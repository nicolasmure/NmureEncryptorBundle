<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="nmure_encryptor.encryptor.original.class">Nmure\EncryptorBundle\Encryptor\Encryptor</parameter>

        <parameter key="nmure_encryptor.adapter.base64.class">Nmure\EncryptorBundle\Adapter\Base64Adapter</parameter>
    </parameters>

    <services>
        <service id="nmure_encryptor.encryptor.original" class="%nmure_encryptor.encryptor.original.class%">
            <argument>%nmure_encryptor.secret%</argument>
        </service>

        <service id="nmure_encryptor.adapter.base64" class="%nmure_encryptor.adapter.base64.class%">
            <argument type="service" id="nmure_encryptor.encryptor.original"></argument>
        </service>
    </services>
</container>
