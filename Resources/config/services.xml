<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="nmure_encryptor.formatters.base64_formatter.class">Nmure\Encryptor\Formatter\Base64Formatter</parameter>
        <parameter key="nmure_encryptor.formatters.hex_formatter.class">Nmure\Encryptor\Formatter\HexFormatter</parameter>
    </parameters>

    <services>
        <service id="nmure_encryptor.formatters.base64_formatter" class="%nmure_encryptor.formatters.base64_formatter.class%">
        </service>

        <service id="nmure_encryptor.formatters.hex_formatter" class="%nmure_encryptor.formatters.hex_formatter.class%">
        </service>
    </services>
</container>
